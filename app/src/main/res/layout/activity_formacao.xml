<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#333333"
    tools:context=".ui.formacaoAcademica.FormacaoAcademicaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp"
            android:text="Formação Acadêmica"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Instituição de Ensino*"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editTextInstituicao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="#EEEEEE"
            android:hint="Ex: Universidade Federal do Paraná"
            android:padding="12dp"
            android:textColor="#000000"
            android:inputType="textCapWords" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:text="Curso / Área*"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editTextCurso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="#EEEEEE"
            android:hint="Ex: Bacharelado em Ciência da Computação"
            android:padding="12dp"
            android:textColor="#000000"
            android:inputType="textCapSentences" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:text="Período (Ex: 03/2018 - 12/2022 ou Cursando)*"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editTextPeriodoFormacao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="#EEEEEE"
            android:hint="MM/AAAA - MM/AAAA ou Cursando"
            android:padding="12dp"
            android:textColor="#000000"
            android:inputType="text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:text="Nível (Ex: Graduação, Pós-Graduação, Técnico)*"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editTextNivel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="#EEEEEE"
            android:hint="Ex: Graduação"
            android:padding="12dp"
            android:textColor="#000000"
            android:inputType="textCapWords" />

        <Button
            android:id="@+id/buttonAdicionarFormacao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:backgroundTint="#FAF089"
            android:fontFamily="sans-serif-condensed-medium"
            android:padding="15dp"
            android:text="Adicionar Formação"
            android:textColor="#000000"
            android:textSize="20sp"
            app:cornerRadius="10dp" />

        <Button
            android:id="@+id/buttonFinalizarFormacoes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="#FAF089"
            android:fontFamily="sans-serif-condensed-medium"
            android:padding="15dp"
            android:text="Finalizar Formações"
            android:textColor="#000000"
            android:textSize="20sp"
            app:cornerRadius="10dp" />

    </LinearLayout>
</ScrollView>